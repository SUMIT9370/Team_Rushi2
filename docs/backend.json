{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (matches auth uid)."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "photoURL": {
            "type": "string",
            "description": "The user's profile picture."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp of when the user was created.",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "description": "Timestamp of when the user was last updated.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "displayName",
        "email"
      ]
    },
    "EmergencyContact": {
      "title": "Emergency Contact",
      "type": "object",
      "description": "Represents a user's emergency contact.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The contact's name."
        },
        "relation": {
          "type": "string",
          "description": "The contact's relation to the user."
        },
        "phone": {
          "type": "string",
          "description": "The contact's phone number."
        },
        "avatar": {
          "type": "string",
          "description": "Base64 data URL for the contact's avatar image."
        },
        "isPrimary": {
          "type": "boolean",
          "description": "Indicates if this is the primary contact."
        }
      },
      "required": [
        "name",
        "phone"
      ]
    },
    "FamilyMember": {
      "title": "Family Member",
      "type": "object",
      "description": "Represents a user's family member for the Family Connect feature.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The family member's name."
        },
        "relation": {
          "type": "string",
          "description": "The family member's relation to the user."
        },
        "phone": {
          "type": "string",
          "description": "The family member's phone number."
        },
        "avatar": {
          "type": "string",
          "description": "Base64 data URL for the family member's avatar image."
        }
      },
      "required": [
        "name",
        "relation",
        "phone"
      ]
    },
    "Reminder": {
      "title": "Reminder",
      "type": "object",
      "description": "A reminder for a user, such as for medication or an appointment.",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the reminder."
        },
        "time": {
          "type": "string",
          "description": "The time for the reminder."
        },
        "type": {
          "type": "string",
          "enum": [
            "medicine",
            "doctor",
            "water",
            "other"
          ]
        },
        "description": {
          "type": "string",
          "description": "An optional description for the reminder."
        },
        "completed": {
          "type": "boolean",
          "description": "Indicates if the reminder has been completed."
        },
        "emoji": {
          "type": "string",
          "description": "An emoji to visually represent the reminder type."
        }
      },
      "required": [
        "title",
        "time",
        "type",
        "completed",
        "emoji"
      ]
    },
    "HealthRecord": {
      "title": "Health Record",
      "type": "object",
      "description": "A single health vital measurement for a user.",
      "properties": {
        "type": {
          "type": "string",
          "enum": [ "blood_pressure", "heart_rate", "blood_sugar", "oxygen_level"],
          "description": "The type of health metric."
        },
        "value": {
          "type": "string",
          "description": "The value of the measurement (e.g., '120/80' for blood pressure)."
        },
        "status": {
            "type": "string",
            "enum": ["normal", "warning", "critical"],
            "description": "The status of the reading."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the record was taken."
        }
      },
      "required": ["type", "value", "status", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile data."
        }
      },
      {
        "path": "/users/{userId}/emergencyContacts/{contactId}",
        "definition": {
          "entityName": "EmergencyContact",
          "schema": {
            "$ref": "#/entities/EmergencyContact"
          },
          "description": "Stores emergency contacts for a specific user."
        }
      },
      {
        "path": "/users/{userId}/familyMembers/{memberId}",
        "definition": {
          "entityName": "FamilyMember",
          "schema": {
            "$ref": "#/entities/FamilyMember"
          },
          "description": "Stores family members for a specific user."
        }
      },
      {
        "path": "/users/{userId}/reminders/{reminderId}",
        "definition": {
          "entityName": "Reminder",
          "schema": {
            "$ref": "#/entities/Reminder"
          },
          "description": "Stores reminders for a specific user."
        }
      },
      {
        "path": "/users/{userId}/healthRecords/{recordId}",
        "definition": {
          "entityName": "HealthRecord",
          "schema": {
            "$ref": "#/entities/HealthRecord"
          },
          "description": "Stores health vitals for a specific user."
        }
      }
    ]
  }
}
